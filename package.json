{
  "private": true,
  "name": "reasonml",
  "displayName": "Reason",
  "description": "Reason language support",
  "version": "0.0.33",
  "publisher": "freebroccolo",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/freebroccolo/vscode-reasonml/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freebroccolo/vscode-reasonml.git"
  },
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Debuggers",
    "Languages",
    "Linters"
  ],
  "icon": "assets/logo.png",
  "activationEvents": [
    "onLanguage:reason.module.defns",
    "onLanguage:reason.module.decls"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Reason configuration",
      "properties": {
        "reason.path.ocamlfind": {
          "type": "string",
          "default": "ocamlfind"
        },
        "reason.path.ocamlmerlin": {
          "type": "string",
          "default": "ocamlmerlin"
        },
        "reason.path.opam": {
          "type": "string",
          "default": "opam"
        },
        "reason.path.rebuild": {
          "type": "string",
          "default": "rebuild"
        },
        "reason.path.refmt": {
          "type": "string",
          "default": "refmt"
        },
        "reason.path.refmterr": {
          "type": "string",
          "default": "refmterr"
        },
        "reason.path.rtop": {
          "type": "string",
          "default": "rtop"
        }
      }
    },
    "grammars": [
      {
        "language": "reason.common",
        "scopeName": "source.reason.common",
        "path": "./syntaxes/reason-common.json"
      },
      {
        "language": "reason.hover.info",
        "scopeName": "source.reason.hover.info",
        "path": "./syntaxes/reason-hover-info.json"
      },
      {
        "language": "reason.hover.type",
        "scopeName": "source.reason.hover.type",
        "path": "./syntaxes/reason-hover-type.json"
      },
      {
        "language": "reason.module.defns",
        "scopeName": "source.reason.module.defns",
        "path": "./syntaxes/reason-module-defns.json"
      },
      {
        "language": "reason.module.decls",
        "scopeName": "source.reason.module.decls",
        "path": "./syntaxes/reason-module-decls.json"
      }
    ],
    "languages": [
      {
        "id": "reason.common"
      },
      {
        "id": "reason.hover.info"
      },
      {
        "id": "reason.hover.type"
      },
      {
        "id": "reason.module.defns",
        "aliases": [
          "Reason"
        ],
        "extensions": [
          ".re"
        ],
        "configuration": "./reason.configuration.json"
      },
      {
        "id": "reason.module.decls",
        "aliases": [
          "Reason"
        ],
        "extensions": [
          ".rei"
        ],
        "configuration": "./reason.configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "tslint": "^3.13.0",
    "typescript": "^2.0.0",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "vscode-languageclient": "^2.5.0",
    "vscode-languageserver": "^2.5.0",
    "vscode-languageserver-types": "^1.0.3"
  }
}
