{
  "private": true,
  "name": "reasonml",
  "displayName": "Reason",
  "description": "Reason language support",
  "version": "0.0.12",
  "publisher": "freebroccolo",
  "license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/freebroccolo/vscode-reasonml/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/freebroccolo/vscode-reasonml.git"
	},
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Debuggers",
    "Languages",
    "Linters"
  ],
  "icon": "assets/logo.png",
  "activationEvents": [
    "onLanguage:reason"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Reason configuration",
      "properties": {
        "reason.path.ocamlfind": {
          "type": "string",
          "default": "ocamlfind"
        },
        "reason.path.ocamlmerlin": {
          "type": "string",
          "default": "ocamlmerlin"
        },
        "reason.path.opam": {
          "type": "string",
          "default": "opam"
        },
        "reason.path.rebuild": {
          "type": "string",
          "default": "rebuild"
        },
        "reason.path.refmt": {
          "type": "string",
          "default": "refmt"
        },
        "reason.path.refmterr": {
          "type": "string",
          "default": "refmterr"
        },
        "reason.path.rtop": {
          "type": "string",
          "default": "rtop"
        }
      }
    },
    "grammars": [
      {
        "language": "reason-common",
        "scopeName": "source.reason.common",
        "path": "./syntaxes/reason-common.json"
      },
      {
        "language": "reason",
        "scopeName": "source.reason",
        "path": "./syntaxes/reason.json"
      },
      {
        "language": "reason-interface",
        "scopeName": "source.reason-interface",
        "path": "./syntaxes/reason-interface.json"
      }
    ],
    "languages": [
      {
        "id": "reason-common"
      },
      {
        "id": "reason",
        "aliases": [
          "Reason"
        ],
        "extensions": [
          ".re"
        ],
        "configuration": "./reason.configuration.json"
      },
      {
        "id": "reason-interface",
        "aliases": [
          "Reason (Interface)"
        ],
        "extensions": [
          ".rei"
        ],
        "configuration": "./reason.configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.0.0",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "vscode-languageclient": "^2.5.0",
    "vscode-languageserver": "^2.5.0"
  }
}
