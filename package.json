{
  "private": true,
  "name": "reasonml",
  "displayName": "Reason",
  "description": "Reason language support",
  "version": "0.0.46",
  "publisher": "freebroccolo",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/freebroccolo/vscode-reasonml/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freebroccolo/vscode-reasonml.git"
  },
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Debuggers",
    "Languages",
    "Linters"
  ],
  "icon": "assets/logo.png",
  "activationEvents": [
    "onLanguage:reason"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "reasonml.caseSplit",
        "title": "Reason: case split"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Reason configuration",
      "properties": {
        "reason.path.ocamlfind": {
          "type": "string",
          "default": "ocamlfind"
        },
        "reason.path.ocamlmerlin": {
          "type": "string",
          "default": "ocamlmerlin"
        },
        "reason.path.opam": {
          "type": "string",
          "default": "opam"
        },
        "reason.path.rebuild": {
          "type": "string",
          "default": "rebuild"
        },
        "reason.path.refmt": {
          "type": "string",
          "default": "refmt"
        },
        "reason.path.refmterr": {
          "type": "string",
          "default": "refmterr"
        },
        "reason.path.rtop": {
          "type": "string",
          "default": "rtop"
        }
      }
    },
    "grammars": [
      {
        "language": "reason",
        "scopeName": "source.reason",
        "path": "./syntaxes/reason.json"
      },
      {
        "language": "reason.hover.info",
        "scopeName": "source.reason.hover.info",
        "path": "./syntaxes/reason-hover-info.json"
      },
      {
        "language": "reason.hover.type",
        "scopeName": "source.reason.hover.type",
        "path": "./syntaxes/reason-hover-type.json"
      }
    ],
    "languages": [
      {
        "id": "reason",
        "aliases": [
          "Reason"
        ],
        "extensions": [
          ".re",
          ".rei"
        ],
        "configuration": "./reason.configuration.json"
      },
      {
        "id": "reason.hover.info"
      },
      {
        "id": "reason.hover.type"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "reasonml.caseSplit",
          "group": "reasonml",
          "when": "editorTextFocus && resourceLangId == reason"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run ocamldoc:grammar:compile && node ./node_modules/vscode/bin/compile -watch -p ./",
    "ocamldoc:grammar:compile": "mkdir -p out/src/shared/ocamldoc/compile && nearleyc src/shared/ocamldoc/compile/markdown.ne > out/src/shared/ocamldoc/compile/markdown.js",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vscode:prepublish": "npm run ocamldoc:grammar:compile && node ./node_modules/vscode/bin/compile"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.36",
    "tslint": "^3.13.0",
    "typescript": "^2.0.3",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "lodash": "^4.15.0",
    "nearley": "^2.7.3",
    "vscode-jsonrpc": "^2.4.0",
    "vscode-languageclient": "^2.5.0",
    "vscode-languageserver": "^2.5.0",
    "vscode-languageserver-types": "^1.0.3"
  },
  "extensionDependencies": [
  ]
}
