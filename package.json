{
  "private": true,
  "name": "reasonml",
  "displayName": "Reason",
  "description": "Reason language support",
  "version": "0.0.5",
  "publisher": "freebroccolo",
  "license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/freebroccolo/vscode-reasonml/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/freebroccolo/vscode-reasonml.git"
	},
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Debuggers",
    "Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:reason"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "grammars": [
      {
        "language": "reason-common",
        "scopeName": "source.reason.common",
        "path": "./syntaxes/reason-common.json"
      },
      {
        "language": "reason",
        "scopeName": "source.reason",
        "path": "./syntaxes/reason.json"
      },
      {
        "language": "reason-interface",
        "scopeName": "source.reason-interface",
        "path": "./syntaxes/reason-interface.json"
      }
    ],
    "languages": [
      {
        "id": "reason-common"
      },
      {
        "id": "reason",
        "aliases": [
          "Reason"
        ],
        "extensions": [
          ".re"
        ],
        "configuration": "./reason.configuration.json"
      },
      {
        "id": "reason-interface",
        "aliases": [
          "Reason (Interface)"
        ],
        "extensions": [
          ".rei"
        ],
        "configuration": "./reason.configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.0.0",
    "vscode": "^0.11.0"
  }
}
